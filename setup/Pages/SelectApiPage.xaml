<Page x:Class="ReShade.Setup.Pages.SelectApiPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignWidth="510" d:DesignHeight="638"
      Width="Auto" Height="Auto">
  <DockPanel>
    <Label DockPanel.Dock="Top" Margin="10" Padding="0" VerticalAlignment="Top" HorizontalContentAlignment="Stretch" Foreground="#FF003399" FontSize="16">
      <StackPanel Orientation="Horizontal">
        <TextBlock Text="Select the rendering API " />
        <TextBlock x:Name="AppName" Text="the application" />
        <TextBlock Text=" uses:" />
      </StackPanel>
    </Label>
    <TextBlock DockPanel.Dock="Bottom" Margin="10,5" TextWrapping="Wrap" Text="The preselected option is a guess based on a quick analysis of the executable, but may not be accurate.&#10;If you do not know which rendering API the game uses, can search for the game on https://www.pcgamingwiki.com/ and look for an 'API' section on its page." />
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
      <RadioButton x:Name="ApiD3D9" Margin="8,0,0,0" Content="Direct3D _9" />
      <RadioButton x:Name="ApiDXGI" Margin="8,0,0,0" Content="Direct3D _10/11/12" />
      <RadioButton x:Name="ApiOpenGL" Margin="8,0,0,0" Content="_OpenGL" />
      <RadioButton x:Name="ApiVulkan" Margin="8,0,0,0" Content="_Vulkan" />
    </StackPanel>
  </DockPanel>
</Page>
